{
  "name": "nest-backend",
  "version": "1.0.0",
  "private": true,
  "scripts": {
    "build": "nest build",
    "format": "prettier --write \"server/**/*.ts\"",
    "lint": "eslint server --ext ts --no-ignore --cache && prettier --check \"server/**/*.ts\"",
    "lint:fix": "eslint server --ext ts --no-ignore --fix --cache && npm run format",
    "type-check": "tsc",
    "prebuild": "rimraf dist",
    "start": "node dist/main",
    "start:local": "cross-env NODE_ENV=local nest start --debug --watch",
    "start:dev": "cross-env NODE_ENV=development nest start --watch",
    "start:prod": "cross-env NODE_ENV=production node dist/main"
  },
  "dependencies": {
    "@automapper/classes": "^8.8.1",
    "@automapper/core": "^8.8.1",
    "@automapper/nestjs": "^8.8.1",
    "@nestjs/common": "^8.4.7",
    "@nestjs/config": "^2.3.4",
    "@nestjs/core": "^8.4.7",
    "@nestjs/event-emitter": "^1.4.2",
    "@nestjs/platform-express": "^8.4.7",
    "@nestjs/schedule": "^2.2.3",
    "@nestjs/swagger": "^5.2.1",
    "@nestjs/typeorm": "^8.1.4",
    "body-parser": "^1.20.2",
    "class-transformer": "^0.5.1",
    "class-validator": "^0.13.2",
    "cross-env": "^7.0.3",
    "dotenv": "^16.4.5",
    "express": "^4.19.2",
    "express-http-context": "^1.2.4",
    "fs": "0.0.1-security",
    "lodash": "^4.17.21",
    "node-fetch": "^3.3.2",
    "pg": "^8.11.5",
    "reflect-metadata": "^0.1.14",
    "rimraf": "^3.0.2",
    "rxjs": "^7.8.1",
    "swagger-ui-express": "^4.6.3",
    "typeorm": "0.3.20",
    "uuid": "^8.3.2"
  },
  "devDependencies": {
    "@nestjs/cli": "^8.2.8",
    "@nestjs/schematics": "^8.0.11",
    "@nestjs/testing": "^8.4.7",
    "@types/body-parser": "^1.19.5",
    "@types/express": "^4.17.21",
    "@types/jest": "27.5.0",
    "@types/lodash": "^4.17.4",
    "@types/node": "^16.18.97",
    "@types/supertest": "^2.0.16",
    "@types/uuid": "^9.0.8",
    "@typescript-eslint/eslint-plugin": "^5.62.0",
    "@typescript-eslint/parser": "^5.62.0",
    "eslint": "^8.57.0",
    "eslint-config-prettier": "^8.10.0",
    "eslint-plugin-prettier": "^4.2.1",
    "eslint-plugin-simple-import-sort": "^12.1.0",
    "jest": "28.0.3",
    "prettier": "^2.8.8",
    "source-map-support": "^0.5.21",
    "supertest": "^6.3.4",
    "ts-jest": "28.0.1",
    "ts-node": "10.9.2",
    "tsconfig-paths": "4.0.0",
    "typescript": "4.5.2"
  },
  "sideEffects": false,
  "lint-staged": {
    "*src/**/*.ts": ["eslint --fix", "prettier --ignore-unknown --write"]
  },
  "jest": {
    "moduleFileExtensions": ["js", "json", "ts"],
    "rootDir": "server",
    "testRegex": ".*\\.spec\\.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "collectCoverageFrom": ["**/*.(t|j)s"],
    "coverageDirectory": "../coverage",
    "testEnvironment": "node"
  }
}
